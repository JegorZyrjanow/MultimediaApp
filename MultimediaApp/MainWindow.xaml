            <ListBox ItemsSource="{Binding Collection, Mode=TwoWay}"
                     SelectedItem="{Binding SelectedPicture}"                     
                     Grid.Row="2"
                     Margin="8,3,0,3"
                     BorderBrush="{x:Null}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <Image x:Name="Image" Width="32" Height="32" Margin="1" Source="{Binding Path=Path}"/>
                            <StackPanel>
                                <TextBlock Text="{Binding Path=Name}" Margin="3,0,0,0" VerticalAlignment="Center"/>
                                <TextBlock x:Name="Category" Text="{Binding Path=Category}"/>
                            </StackPanel>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Style.Triggers>
                            <!--<Trigger>
                            <Setter Property="Visibility" Value="Collapsed"/>
                        </Trigger>-->
                            <DataTrigger Binding="{Binding ElementName=Category, Path=Text}" Value="" >
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ListBox.ItemContainerStyle>
            </ListBox>

            <Border Margin="5,5,5,5"
                    Background="white"
                    Grid.Row="1" Grid.Column="1" Grid.RowSpan="4">
                <Image Source="{Binding BitmapImage, UpdateSourceTrigger=PropertyChanged}" Margin="5,5,5,5" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Grid.RowSpan="3"/>
            </Border>

            <StackPanel Orientation="Horizontal"
                        Grid.Row="3" Grid.Column="0"
                        Margin="5,0,0,0">
                <Button Command="{Binding AddCommand}"
                        Content="+"
                        FontWeight="Bold"
                        Width="42" Height="20"
                        Margin="2,0,0,0"
                        Foreground="White"
                        Background="Transparent"
                        BorderThickness="0.7"/>
                <Button Command="{Binding RemoveCommand}"
                        CommandParameter="{Binding SelectedPicture}"
                        Content="-"
                        FontWeight="Bold"
                        Width="42" Height="20"
                        Margin="5,0,0,0"
                        Foreground="White"
                        Background="Transparent"
                        BorderThickness="0.7"/>
            </StackPanel>

            <ComboBox x:Name="ComboBoxCategories"
                      Grid.Row="3"
                      Width="94"
                      HorizontalAlignment="Right"
                      ItemsSource="{Binding Categories, UpdateSourceTrigger=PropertyChanged}"
                      SelectedItem="{Binding SelectedCategory}"
                      Margin="0,4,5,4"/>

            <TextBox x:Name="SearchBox"
                     Grid.Row="1"
                     Style="{StaticResource MyTextbox}"
                     Text="{Binding SearchText,
                            Mode=TwoWay,
                            UpdateSourceTrigger=PropertyChanged}"/>

        </Grid>
    </Border>
</Window>
