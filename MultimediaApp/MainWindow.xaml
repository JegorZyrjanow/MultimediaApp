                                </StackPanel>
                            </DataTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TreeView.Resources>
        </TreeView>-->

        <ListBox ItemsSource="{Binding Collection}" SelectedItem="{Binding SelectedPicture}" Grid.Row="3" Margin="0,5,5,5" Grid.Column="2" Grid.RowSpan="1" BorderBrush="{x:Null}" >
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <Image x:Name="Image" Width="32" Height="32" Margin="1" Source="{Binding Path=Path}"/>
                        <StackPanel>
                            <TextBlock Text="{Binding Path=Name}" Margin="3,0,0,0" VerticalAlignment="Center"/>
                            <TextBlock x:Name="Category" Text="{Binding Path=Category}"/>
                        </StackPanel>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Style.Triggers>
                        <!--<Trigger>
                            <Setter Property="Visibility" Value="Collapsed"/>
                        </Trigger>-->
                        <DataTrigger Binding="{Binding ElementName=Category, Path=Text}" Value="" >
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </ListBox.ItemContainerStyle>
        </ListBox>

        <Border Margin="5,5,5,5" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Grid.RowSpan="3" Background="White">
            <Image Source="{Binding BitmapImage, UpdateSourceTrigger=PropertyChanged}" Margin="5,5,5,5" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Grid.RowSpan="3"/>
        </Border>

        <StackPanel Orientation="Horizontal" Grid.Row="2" Grid.Column="2" Margin="0,0,0,0" >
            <Button Command="{Binding AddCommand}" Content="+" Margin="0,5,5,0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Width="26"/>
            <Button Command="{Binding RemoveCommand}" CommandParameter="{Binding SelectedPicture}" Content="-" Margin="3,5,5,0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Width="26"/>
            <ComboBox x:Name="ComboBoxCategories" ItemsSource="{Binding Categories, UpdateSourceTrigger=PropertyChanged}" SelectedItem="{Binding SelectedCategory}" HorizontalAlignment="Stretch" Height="20" Margin="5,5,5,0" VerticalAlignment="Stretch" Width="95" SelectedIndex="0"/>
        </StackPanel>

        <TextBox x:Name="SearchBox" Margin="0,5,5,0" TextWrapping="Wrap" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Row="1" Grid.Column="2"/>

    </Grid>
</Window>
